html(lang="en")
	head
		title DiaS'pura Tickets
		link(rel='stylesheet', href='css/bootstrap.css')
		link(rel="apple-touch-icon-precomposed", sizes="144x144", href="../assets/ico/apple-touch-icon-144-precomposed.png")
		link(rel="apple-touch-icon-precomposed", sizes="114x114", href="../assets/ico/apple-touch-icon-114-precomposed.png")
		link(rel="apple-touch-icon-precomposed", sizes="72x72", href="../assets/ico/apple-touch-icon-72-precomposed.png")
		link(rel="apple-touch-icon-precomposed", href="../assets/ico/apple-touch-icon-57-precomposed.png")
		link(rel="shortcut icon", href="../assets/ico/favicon.png")

		style.

			textarea {
				width: 600px;
				height: 150px;
				padding: 5px;
			}
			td {
				padding: 3px;
				width: 75px;
			}
			form {
				margin: 0px
			}
			thead {
				font-weight: bold;
			}
			table {
				text-align: center;
			}

			li {background: none}

			body {
				padding: 20px 150px 60px 150px;
			}
			.container {
				margin: 0 auto;
				max-width: 1000px;
			}
				.container > hr {
				margin: 60px 0;
			}

			.jumbotron {
				margin: 80px 0;
				text-align: center;
			}
			.jumbotron h1 {
				font-size: 100px;
				line-height: 1;
			}
			.jumbotron .lead {
				font-size: 24px;
				line-height: 1.25;
			}
			.jumbotron .btn {
				font-size: 21px;
				padding: 14px 24px;
			}

			.marketing {
				margin: 60px 0;
			}
			.marketing p + h4 {
				margin-top: 28px;
			}

			.navbar .navbar-inner {
				padding: 0;
			}
			.navbar .nav {
				margin: 0;
				display: table;
				width: 100%;
			}
			.navbar .nav li {
				display: table-cell;
				width: 1%;
				float: none;
			}
			.navbar .nav li a {
				font-weight: bold;
				text-align: center;
				border-left: 1px solid rgba(255,255,255,.75);
				border-right: 1px solid rgba(0,0,0,.1);
			}
			.navbar .nav li:first-child a {
				border-left: 0;
				border-radius: 3px 0 0 3px;
			}
			.navbar .nav li:last-child a {
				border-right: 0;
				border-radius: 0 3px 3px 0;
			}

	body
		div.masthead
			h3.muted DiaS'pura Tickets
			div.navbar
				div.navbar-inner
					div.container
						ul.nav
							li: a(href="/") Home
							li: a(href="/new") New Orders
							li.active: a(href="#") Purchased

		h3 Search
		div.row-fluid
			div.span12
				form(action="/purchased", method="post")
					p
						label Name
						input(type="text", name="searchword", id="searchword")
					input(type="submit", value="Search")
		
		hr		

		h3 Tickets Purchased
		table(border="1")
			thead
				td(style="width:100px") Name
				td Edit
				td Quantity
				td Price
				td(style="width:150px") Remarks
				td Paid
				td Delete

			- for (var order in docs) 
				tr
					td= docs[order].name
					td
						form(action="/edit", method="post")
							input(type="hidden", name="name", value="#{docs[order].name")
							input(type="hidden", name="numtickets", value="#{docs[order].numtickets")
							input(type="hidden", name="price", value="#{docs[order].price")
							input(type="hidden", name="remarks", value="#{docs[order].remarks")
							input(type="submit", value="Edit", id="#{docs[order].id}")
					td= docs[order].numtickets
					td= docs[order].price
					td= docs[order].remarks
					- if (!docs[order].paid)
						td No
					- else
						td
					td
						input(type="submit", value="Delete", id="#{docs[order].id}")

		hr

		div.footer
			p &copy; ClubSG 2013

